# =============================================================================
# Project Service - Environment Configuration
# =============================================================================
# Environment variables for the Project Service microservice
# Copy this file to .env and fill in the actual values
# =============================================================================

# =============================================================================
# SPRING CONFIGURATION
# =============================================================================
# Application profile (local, docker, prod)
SPRING_PROFILE=local

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database for project service

PROJECT_DB_HOST=localhost
PROJECT_DB_PORT=5435
PROJECT_DB_NAME=projectDB
PROJECT_DB_USER=your_project_db_username
PROJECT_DB_PASSWORD=your_secure_project_db_password

# =============================================================================
# RABBITMQ CONFIGURATION
# =============================================================================
# Message broker for inter-service communication

RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=your_rabbitmq_username
RABBITMQ_PASSWORD=your_secure_rabbitmq_password

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# Google Gemini AI for document analysis and research assistance

GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# DOCUMENT PROCESSING
# =============================================================================
# FastAPI service for PDF extraction and processing

FASTAPI_URL=http://localhost:8000

# =============================================================================
# CLOUD STORAGE CONFIGURATION
# =============================================================================
# Backblaze B2 for document and file storage

B2_ENDPOINT=https://s3.ams5.backblazeb2.com
B2_KEY_ID=your_backblaze_key_id
B2_APPLICATION_KEY=your_backblaze_application_key
B2_BUCKET_NAME=your_bucket_name
B2_BUCKET_ID=your_bucket_id
PUBLIC_CDN_BASE=https://your-bucket.s3.ams5.backblazeb2.com

# =============================================================================
# SERVICE DISCOVERY
# =============================================================================
# Eureka service registry

EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://localhost:8761/eureka/

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# User service for authentication and user management

USER_SERVICE_URL=http://localhost:8081
